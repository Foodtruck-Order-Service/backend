<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.fos.review.ReviewMapper">
    <resultMap id="reviewResultMap" type="kr.co.fos.review.Review">
        <result column="NO" property="no" />
        <result column="MEMBER_NO" property="memberNo" />
        <result column="FOODTRUCK_NO" property="foodtruckNo" />
        <result column="GRADE" property="grade" />
        <result column="CONTENT" property="content" />
        <result column="REGIST_DATE" property="registDate" />
    </resultMap>

    <sql id="whereSql">
        <where>
            <if test="no != null and no != ''">
                AND NO = #{no}
            </if>
            <if test="memberNo != null and memberNo != ''">
                AND MEMBER_NO = #{memberNo}
            </if>
            <if test="foodtruckNo != null and foodtruckNo != ''">
                AND FOODTRUCK_NO = #{foodtruckNo}
            </if>
            <if test="grade != null and grade != ''">
                AND GRADE = #{grade}
            </if>
            <if test="content != null and content != ''">
                AND CONTENT = #{content}
            </if>
            <if test="registDate != null and registDate != ''">
                AND DATE_FORMAT(REGIST_DATE, '%Y-%m-%d %I:%i:%s') = DATE_FORMAT(#{registDate}, '%Y-%m-%d %I:%i:%s')
            </if>
        </where>
    </sql>

    <select id="count" parameterType="kr.co.fos.review.Review" resultType="int">
        SELECT COUNT(*)
        FROM review
        <include refid="whereSql" />
    </select>

    <select id="list" parameterType="kr.co.fos.review.Review" resultMap="reviewResultMap">
        SELECT *
        FROM (
            SELECT
                NO,
                MEMBER_NO,
                FOODTRUCK_NO,
                GRADE,
                CONTENT,
                DATE_FORMAT(REGIST_DATE, '%Y-%m-%d %I:%i:%s')
            FROM review
            <include refid="whereSql" />
        ) TB
        <where>
            <if test="itemStart > -1">
                RN BETWEEN (#{itemStart} + 1)
                       AND (#{itemStart} + #{itemSizePerPage})
            </if>
        </where>
    </select>

    <select id="select" parameterType="kr.co.fos.review.Review" resultMap="reviewResultMap">
        SELECT
            NO,
            MEMBER_NO,
            FOODTRUCK_NO,
            GRADE,
            CONTENT,
            DATE_FORMAT(REGIST_DATE, '%Y-%m-%d %I:%i:%s')
        FROM review
        <include refid="whereSql" />
    </select>

    <insert id="insert" parameterType="kr.co.fos.review.Review">
        INSERT INTO review (
            NO,
            MEMBER_NO,
            FOODTRUCK_NO,
            GRADE,
            CONTENT,
            REGIST_DATE
        ) VALUES (
            #{no},
            #{memberNo},
            #{foodtruckNo},
            #{grade},
            #{content},
            DATE_FORMAT(#{registDate}, '%Y-%m-%d %I:%i:%s')
        )
    </insert>

    <update id="update" parameterType="kr.co.fos.review.Review">
        UPDATE review
        <set>
            <if test="no != ''">
                NO = #{no},
            </if>
            <if test="memberNo != ''">
                MEMBER_NO = #{memberNo},
            </if>
            <if test="foodtruckNo != ''">
                FOODTRUCK_NO = #{foodtruckNo},
            </if>
            <if test="grade != ''">
                GRADE = #{grade},
            </if>
            <if test="content != ''">
                CONTENT = #{content},
            </if>
            <if test="registDate != ''">
                REGIST_DATE = DATE_FORMAT(#{registDate}, '%Y-%m-%d %I:%i:%s'),
            </if>
        </set>
    </update>

    <delete id="delete" parameterType="kr.co.fos.review.Review">
        DELETE FROM review
        <include refid="whereSql" />
    </delete>
</mapper>